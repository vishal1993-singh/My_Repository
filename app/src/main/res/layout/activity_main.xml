<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="NAME"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="45dp"

        />

    <EditText
        android:id="@+id/ed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/textview1"
        android:hint="Enter Name "/>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview1"
        android:hint="SURNAME"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="45dp"

        />

    <EditText
        android:id="@+id/ed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed1"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/textview2"
        android:hint="Enter Surname "/>

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="MARKS"
        android:layout_below="@+id/textview2"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="50dp"

        />

    <EditText

        android:id="@+id/ed3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed2"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/textview3"
        android:hint="Enter Marks "
        />

    <TextView
        android:id="@+id/textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:layout_below="@+id/textview3"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="35dp"

        />

    <EditText

        android:id="@+id/ed4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed3"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/textview4"
        android:hint="Enter ID "

        />

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed4"
        android:layout_alignEnd="@+id/textview4"
        android:layout_alignRight="@+id/textview4"
        android:layout_marginLeft="30dp"

        android:layout_marginTop="50dp"
        android:layout_marginEnd="-84dp"
        android:layout_marginRight="-84dp"
        android:text="ADD DATA" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed4"

        android:layout_alignEnd="@+id/ed4"
        android:layout_alignRight="@+id/ed4"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:text="VIEW ALL" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt1"

        android:layout_alignEnd="@+id/bt1"
        android:layout_alignRight="@+id/bt1"

        android:layout_marginTop="50dp"

        android:text="update" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt1"

        android:layout_alignEnd="@+id/bt2"
        android:layout_alignRight="@+id/bt2"
        android:layout_marginLeft="150dp"

        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="delete" />

</RelativeLayout>


















